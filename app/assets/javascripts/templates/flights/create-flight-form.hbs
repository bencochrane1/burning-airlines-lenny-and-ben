<form class="row" id="createFlightInputs">
  <div class="three columns">
    <input class="u-full-width flight-number" type="text" placeholder="Flight Number">
  </div>
  <div class="three columns">
    <input class="u-full-width date" type="date" placeholder="Date">
  </div>
  <div class="three columns">
    <input class="u-full-width origin" type="text" placeholder="Origin">
  </div>
  <div class="three columns">
    <input class="u-full-width destination" type="text" placeholder="Destination">
  </div>
  <div class="three columns">
    <input class="u-full-width plane_id" type="number" placeholder="Plane">
  </div>
  <div class="three columns">
    <input type="submit">
  </div>
</form>